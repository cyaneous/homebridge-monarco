{
  "pluginAlias": "Monarco",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Monarco"
      },
      "watchdogTimeout": {
        "title": "Watchdog Timeout",
        "description": "The Raspberry Pi will be power-cycled by the watchdog after this many seconds of timeout.",
        "type": "integer",
        "required": true,
        "default": 5,
        "minimum": 1,
        "maximum": 300
      },
      "devices": {
        "title": "Devices",
        "notitle": false,
        "type": "array",
        "items": {
          "description": "Device",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "title": "Kind",
              "description": "The kind of device connected.",
              "type": "string",
              "required": true,
              "default": "contactSensor",
              "oneOf": [
                {
                  "title": "Contact Sensor",
                  "enum": [
                    "contactSensor"
                  ]
                },
                {
                  "title": "Lunos e2",
                  "enum": [
                    "lunosE2"
                  ]
                },
                {
                  "title": "Lunos ego",
                  "enum": [
                    "lunosEgo"
                  ]
                }
              ]
            },
            "name": {
              "title": "Name",
              "description": "The HomeKit name of this device.",
              "type": "string",
              "required": true
            },
            "digitalInput": {
              "title": "Digital Input",
              "description": "The digital input used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 4,
              "condition": {
                "functionBody": "return arrayIndices !== null && ['contactSensor'].includes(model.devices[arrayIndices].kind);;"
              }
            },
            "analogInput": {
              "title": "Analog Input",
              "description": "The analog input used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 2,
              "condition": {
                "functionBody": "return arrayIndices !== null && [].includes(model.devices[arrayIndices].kind);"
              }
            },
            "digitalOutput": {
              "title": "Digital Output",
              "description": "The digital output used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 4,
              "condition": {
                "functionBody": "return arrayIndices !== null && [].includes(model.devices[arrayIndices].kind);"
              }
            },
            "analogOutput": {
              "title": "Analog Output",
              "description": "The analog output used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 2,
              "condition": {
                "functionBody": "return arrayIndices !== null && ['lunosE2', 'lunosEgo'].includes(model.devices[arrayIndices].kind);"
              }
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": [
        {
          "type": "flex",
          "flex-flow": "column",
          "items": [
            "name",
            "watchdogTimeout"
          ]
        },
        {
          "type": "flex",
          "flex-flow": "column",
          "items": [
            "name",
            "name"
          ]
        }
      ]
    },
   {
      "type": "fieldset",
      "title": "Devices",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "title": "Device",
          "key": "devices",
          "type": "array",
          "notitle": true,
          "items": [
            {
              "type": "div",
              "items": [
                {
                  "key": "devices[].kind",
                  "title": "Kind",
                },
                {
                  "key": "managedDevices[].name",
                  "title": "Name",
                },
                {
                  "key": "devices[].digitalInput",
                  "title": "Digital Input",
                },
                {
                  "key": "devices[].analogInput",
                  "title": "Analog Input",
                },
                {
                  "key": "devices[].digitalOutput",
                  "title": "Digital Output",
                },
                {
                  "key": "devices[].analogOutput",
                  "title": "Analog Output",
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
