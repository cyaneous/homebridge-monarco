{
  "pluginAlias": "Monarco",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "required": true,
        "default": "Monarco"
      },
      "devices": {
        "title": "Devices",
        "notitle": true,
        "type": "array",
        "items": {
          "description": "<b>Device</b>",
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "kind": {
              "title": "Kind",
              "description": "The kind of device connected.",
              "type": "string",
              "required": true,
              "default": "contactSensor",
              "oneOf": [
                {
                  "title": "Contact Sensor",
                  "enum": [
                    "contactSensor"
                  ]
                },
                {
                  "title": "Lunos e2",
                  "enum": [
                    "lunosE2"
                  ]
                },
                {
                  "title": "Lunos ego",
                  "enum": [
                    "lunosEgo"
                  ]
                }
              ]
            },
            "name": {
              "title": "Name",
              "description": "The HomeKit name of this device.",
              "type": "string"
            },
            "digitalInput": {
              "title": "Digital Input",
              "description": "The digital input used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 4,
              "condition": {
                "functionBody": "return arrayIndices !== null && model.devices[arrayIndices].kind === 'contactSensor';"
              }
            },
            "digitalOutput": {
              "title": "Digital Output",
              "description": "The digital output used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 4,
              "condition": {
                "functionBody": "return arrayIndices !== null && model.devices[arrayIndices].kind === 'unused';"
              }
            },
            "analogInput": {
              "title": "Analog Input",
              "description": "The analog input used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 2,
              "condition": {
                "functionBody": "return arrayIndices !== null && model.devices[arrayIndices].kind === 'unused';"
              }
            },
            "analogOutput": {
              "title": "Analog Output",
              "description": "The analog output used for this device.",
              "type": "integer",
              "required": true,
              "default": 1,
              "minimum": 1,
              "maximum": 2,
              "condition": {
                "functionBody": "return arrayIndices !== null && Array(['lunosE2', 'lunosEgo']).Includes(model.devices[arrayIndices].kind);"
              }
            }
          }
        }
      }
    }
  }
}
